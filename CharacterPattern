package EXAMPLES;
public class charPatterns {
    public static void main(String[] args) {
        int i, j, a;
        char b;
        a = 65;

        for (i = 1; i <= 4; i++) {
            b = (char) a;
            //System.out.print(b + " ");
            for (j = 1; j <=i; j++) {
                System.out.print(b + " ");
                b++;
            }
            System.out.println();
        }
    }
}
